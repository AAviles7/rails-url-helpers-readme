<h1>Posts</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        <% @posts.each do |post|%>
            <tr>
                <td><%= link_to post.title, post%></td>
                <td><%= post.description%></td>
            </tr>
        <% end %>
    </tbody>
</table>